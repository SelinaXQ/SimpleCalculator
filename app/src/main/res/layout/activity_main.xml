<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:gravity="right"
        android:text="0"
        android:textSize="30dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="86dp">

        <Button
            android:id="@+id/seven"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eight"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30dp" />
        <Button
            android:id="@+id/nine"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30dp" />
        <Button
            android:id="@+id/add"
            style="@android:style/Widget.Button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="36dp" />
        <Button
            android:id="@+id/sub"
            style="@android:style/Widget.Button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="36dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="86dp">
        <Button
            android:id="@+id/four"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30dp" />
        <Button
            android:id="@+id/five"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30dp" />
        <Button
            android:id="@+id/six"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30dp" />
        <Button
            android:id="@+id/mul"
            style="@android:style/Widget.Button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="×"
            android:textSize="36dp" />
        <Button
            android:id="@+id/divide"
            style="@android:style/Widget.Button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="÷"
            android:textSize="36dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="86dp">
        <Button
            android:id="@+id/one"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30dp" />
        <Button
            android:id="@+id/two"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30dp" />
        <Button
            android:id="@+id/three"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30dp" />
        <Button
            android:id="@+id/sqrt"
            style="@android:style/Widget.Button"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="√"
            android:textSize="36dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="86dp">
        <Button
            android:id="@+id/zero"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp" />
        <Button
            android:id="@+id/dot"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75sp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="30dp" />
        <Button
            android:id="@+id/c"
            style="@android:style/Widget.Button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="36dp" />
        <Button
            android:id="@+id/equal"
            style="@android:style/Widget.Button"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="36dp" />
    </TableRow>

</LinearLayout>